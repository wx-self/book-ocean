.container{
  box-sizing: border-box;
  width: 100%;
}
.container .route{
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding-left: 30rpx;
  width: 100%;
  line-height: 80rpx;
  background-color: #268686;
  color: #fff;
  font-size: 28rpx;
  z-index: 2;
}
.container .book-item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid #268686;
}
.container .book-item image{
  width: 70rpx;
  height: 100rpx;
  margin-right: 30rpx;
}
.container .book-item view{
  color: #268686;
  font-size: 24rpx;
}
.bg{
  width: 100%;
  height: 80rpx;
}